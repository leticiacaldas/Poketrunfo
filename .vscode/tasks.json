{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/jogo.c",
                "${workspaceFolder}/busca.c",
                "${workspaceFolder}/pokedex.c",
                "-o",
                "${workspaceFolder}/poketrunfo",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilar o programa C"
        }
    ]
}
